<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:padding="10dp"
    android:background="@drawable/requested_card_background">



    <androidx.cardview.widget.CardView
        android:id="@+id/doctor_img_cardview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginVertical="3dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="60dp">

        <ImageView
            android:background="@drawable/image_background"
            android:id="@+id/doctor_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/doctor_image"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/doctor_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_toRightOf="@+id/doctor_img_cardview"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="2dp">

    </TextView>
    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@+id/doctor_name_text"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/doctor_img_cardview"
        android:textColor="@color/white"
        android:layout_marginVertical="2dp">

    </TextView>


</RelativeLayout>