<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookSlotFragment"
    android:orientation="vertical"
    android:background="#407CD6"
    >

    <TextView
        android:id="@+id/choose_date_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:text="Choose your suitable date and time"
        android:textStyle="bold"
        android:textSize="20dp"
        />



    <Spinner
        android:padding="15dp"
        android:id="@+id/choose_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_date_textview"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/spinner_background"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

    </Spinner>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/choose_timeslot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/choose_date"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/snd_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/choose_timeslot"
        android:layout_marginBottom="20dp"
        android:textSize="15dp"
        android:padding="5dp"
        android:text="Send Request"
        android:textAlignment="center"
        android:visibility="invisible"
        android:background="@drawable/send_request_background"
        android:textColor="@color/black"
        android:layout_marginHorizontal="130dp">

    </TextView>

</RelativeLayout>