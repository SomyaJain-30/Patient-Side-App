<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorEditProfile">

    <androidx.cardview.widget.CardView

        android:id="@+id/cardView8"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardBackgroundColor="#407CD6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.cardview.widget.CardView

            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="#BFB9B9"
            app:cardCornerRadius="60dp">


            <ImageView

                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_person_24" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="50dp"
            android:clickable="true"
            app:cardBackgroundColor="#E0F9FF"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/doctor_editprofile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_photo_camera_24" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <LinearLayout

        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.656">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Name"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="Name"
                android:inputType="textCapWords"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Clinic Address :"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_clinicaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="address"
                android:inputType="textCapWords"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Specialization"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_specialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:inputType="text"
                android:hint="Specialization"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Education"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="Education"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Email id"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="Email"
                android:inputType="textWebEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Experience"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_exprience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:inputType="number"
                android:hint="Experience"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:text="Gender"
                android:textColor="#858484"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/doctor_editprofile_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="right"
                android:hint="Gender"
                android:inputType="textCapWords"
                android:textColor="#000000"
                android:textColorHint="#7E7D7D"
                android:textSize="18dp" />
        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/doctor_editprofile_savechanges"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Save Changes"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout9"
        app:layout_constraintVertical_bias="0.419" />


</androidx.constraintlayout.widget.ConstraintLayout>