<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctor_detail"
    android:background="#407CD6">


    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardforprof"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/imageDoctor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:clickable="true"
                android:src="@drawable/black_doctor" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cardforprof"
            android:orientation="vertical"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/dr_name_doctor_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Doctor A"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dr_role_doctor_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Neurologist"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="16dp" />

        </LinearLayout>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rv_bg_doctors"
        android:layout_below="@id/cardView">

        <LinearLayout
            android:id="@+id/linearLayout_doctor_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:padding="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/about_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="To create a multiline TextView in Android, you can simply use the built-in TextView widget and set the android:inputType attribute to indicate that the TextView should be able to accept multiple lines of text. Here's how you can create a multiline TextView in XML"
                    android:lines="3"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:scrollbars="vertical"
                    android:layout_gravity="start"
                    android:padding="3dp"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/readability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Read More"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:textStyle="normal"
                    android:gravity="right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Experience"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="18dp"
                    android:drawableLeft="@drawable/baseline_calendar_month_24"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/experience_doctor_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="28 Years"
                    android:textSize="15dp"
                    android:layout_marginLeft="35dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Area of Specialization"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:drawableLeft="@drawable/baseline_brightness_auto_24"
                    android:textSize="18dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/aos_doctor_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:text="12345678"
                    android:inputType="textMultiLine"
                    android:layout_marginLeft="35dp"
                    android:textSize="15dp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Education"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/baseline_school_24"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/dr_study_doctor_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XYZ, jaipur"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentTop="true"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Languages known"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:drawableLeft="@drawable/baseline_language_24"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/language_doctor_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XYZ, jaipur"
                    android:layout_marginLeft="35dp"
                    android:layout_alignParentTop="true"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bookAppointment"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consultancy Fee"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="18dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/consultancy_fee_doctor_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="\u20b9 500"
            android:layout_alignParentRight="true"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <Button
        android:id="@+id/bookAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#407CD6"
        android:elevation="20dp"
        android:text="BOOK APPOINTMENT"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>