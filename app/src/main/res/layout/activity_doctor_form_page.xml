<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorFormPage">

    <TextView
        android:id="@+id/hello_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.107"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023">

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell us about your:"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089">


    </TextView>

    <LinearLayout

        android:layout_width="350dp"
        android:layout_height="570dp"
        android:layout_marginHorizontal="30dp"
        android:background="#69B9DB"
        android:orientation="vertical"
        android:paddingHorizontal="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Specialization:"
        android:textColor="#214B7C"
        android:textSize="20dp"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/doctor_specialization"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="specialization"
            android:inputType="textCapWords"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#555353" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="Clinic Address:"
            android:textColor="#214B7C"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/doctor_clinic_address"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="textCapWords"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="clinic address"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#555353" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="E-mail Address:"
            android:textColor="#214B7C"
            android:textSize="20dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/doctor_email_address"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="e-mail Address"
            android:inputType="textWebEmailAddress"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#555353" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="Education:"
            android:textColor="#214B7C"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/doctor_education"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="education"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#555353" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="Exprience:"
            android:textColor="#214B7C"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/doctor_exprience"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Exprience"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textColorHint="#555353" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="Gender:"
            android:textColor="#214B7C"
            android:textSize="20dp"
            android:textStyle="bold" />



        <RadioGroup
            android:id="@+id/radiogroup_doctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/doctor_male"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Male"
                android:textColor="#214B7C"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/doctor_female"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female"
                android:textColor="#214B7C"
                android:textSize="18dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/doctor_other"
                android:layout_width="117dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Other"
                android:textColor="#214B7C"
                android:textSize="18dp"
                android:textStyle="bold" />
        </RadioGroup>


    </LinearLayout>

    <Button
        android:id="@+id/doctor_form_button_continue"
        android:layout_width="332dp"
        android:layout_height="56dp"
        android:background="#407CD6"
        android:text="Continue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989" />


</androidx.constraintlayout.widget.ConstraintLayout>