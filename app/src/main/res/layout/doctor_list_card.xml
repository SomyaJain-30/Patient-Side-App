<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingVertical="10dp"
    android:background="@drawable/doctor_item_selected"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/cardview_doctor_list_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true">
<!--        app:cardBackgroundColor="#C1E9FF">-->


        <androidx.cardview.widget.CardView
            android:id="@+id/cardOfImageView"
            android:layout_width="50dp"
            android:elevation="10dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"

            android:layout_margin="10dp"
            app:cardCornerRadius="60dp"

            app:cardBackgroundColor="#17918F">

            <ImageView
                android:id="@+id/doctor_image_doctor_list_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/doctor_image">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="35dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/cardOfImageView"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_doctor_list_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginBottom="0dp" />
            <TextView
                android:id="@+id/speciality_docto_list_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Speciality"
                android:textColor="@color/black"
                android:layout_marginBottom="0dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/language_docto_list_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Languages known"
                android:textColor="@color/black"
                android:textSize="12sp"/>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>