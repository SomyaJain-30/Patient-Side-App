<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/home_docs_card_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardOfImageView"
        android:layout_width="70dp"
        android:elevation="10dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="60dp"
        app:cardBackgroundColor="#17918F">

        <ImageView
            android:id="@+id/doctor_image_doctor_list_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/doctor_image">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/fgh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/cardOfImageView"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_doctor_list_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="0dp" />
        <TextView
            android:id="@+id/Role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speciality"
            android:textColor="@color/black"
            android:layout_marginBottom="0dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/speciality_docto_list_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area of Specialization"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/About_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textColor="@color/black"
        android:layout_below="@+id/fgh"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="4"
        android:inputType="textMultiLine"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/About_head"/>
</RelativeLayout>