<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultation Proforma"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/demoHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demographic Details"
        android:background="#D5D4D4"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:paddingVertical="2dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="16dp"/>

    <LinearLayout
        android:id="@+id/demoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/demoHead">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/NameOfPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:textStyle="italic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/GenderOfPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:textStyle="italic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/AgeOfPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:textStyle="italic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profession:"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/ProfOfPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:textStyle="italic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height:"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/HeightOfPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight:"
                android:textSize="14dp"
                android:layout_marginStart="20dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/WeightOfPatient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14dp"
                android:layout_marginStart="10dp"
                android:textStyle="italic"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/PatientProfilePic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/demoHead"
        android:layout_toEndOf="@+id/demoLayout"
        android:layout_marginTop="10dp"
        android:cropToPadding="true"
        android:layout_marginStart="80dp" />

    <TextView
        android:id="@+id/SymptomsHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Possible Issues"
        android:background="#D5D4D4"
        android:layout_below="@id/demoLayout"
        android:layout_centerHorizontal="true"
        android:paddingVertical="2dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="16dp"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:shrinkColumns="1"
        android:layout_below="@id/SymptomsHead"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:id="@+id/tableLayout"/>

    <TextView
        android:id="@+id/TranscriptHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transcript"
        android:background="#D5D4D4"
        android:layout_below="@id/tableLayout"
        android:layout_centerHorizontal="true"
        android:paddingVertical="2dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TranscriptHead"
        android:inputType="textMultiLine"
        android:id="@+id/transcript"
        android:layout_marginHorizontal="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:layout_marginTop="20dp"/>


</RelativeLayout>